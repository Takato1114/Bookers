<p id="notice">
 <%=  notice %>
 <h1>Books</h1>
<div class = "index-box">
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <body>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy', book_path(book.id) ,method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
  <% end %>
  </body>
</table>


<h2>New Book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
    <h3 id = "error">入力した内容にerrorが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class ="field">
  <label>Title</label>
  <%= f.text_field :title %>
  </div>

  <div class = "field">
  <label>Body</label>
  <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
</div>
<% end %>